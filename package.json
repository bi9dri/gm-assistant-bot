{
  "name": "gm-assistant-bot",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "packageManager": "bun@1.3.8",
  "scripts": {
    "lint": "bun --filter '*' lint",
    "format": "bun --filter '*' format",
    "type-check": "bun --filter '*' type-check",
    "dev": "bun --filter '*' dev",
    "build": "bun --filter '*' build",
    "deploy": "bun --filter '*' deploy",
    "test": "bun --filter '*' test",
    "ncu": "ncu --packageManager bun --workspaces --cooldown 7",
    "knip": "knip"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "knip": "5.84.1",
    "npm-check-updates": "19.3.2",
    "oxfmt": "0.17.0",
    "oxlint": "1.32.0",
    "oxlint-tsgolint": "0.8.6",
    "typescript": "5.9.3",
    "wrangler": "4.59.1"
  }
}