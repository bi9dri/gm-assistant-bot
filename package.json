{
  "name": "gm-assistant-bot",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "bun --filter 'gm-assistant-bot-frontend' dev",
    "dev:backend": "bun --filter 'gm-assistant-bot-backend' preview",
    "build:frontend": "bun --filter 'gm-assistant-bot-frontend' build",
    "build:backend": "bun --filter 'gm-assistant-bot-backend' run format && bun --filter 'gm-assistant-bot-backend' type-check",
    "deploy:frontend": "bun --filter 'gm-assistant-bot-frontend' deploy",
    "deploy:backend": "bun --filter 'gm-assistant-bot-backend' deploy",
    "test": "bun --filter 'gm-assistant-bot-frontend' test",
    "lint": "bun --filter '*' lint",
    "format": "bun --filter '*' format",
    "type-check": "bun --filter '*' type-check"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20251212.0",
    "@types/bun": "1.3.4",
    "oxfmt": "0.17.0",
    "oxlint": "1.32.0",
    "oxlint-tsgolint": "0.8.6",
    "typescript": "5.9.3",
    "wrangler": "4.54.0"
  }
}
